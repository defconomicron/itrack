  </dataset>

  <dataset seriesName='Visits' anchorBgColor='0000FF' anchorBorderColor='0000FF' color='00AA00'>
    <% @page_views.each do |page_view| %><set value='<%= page_view.visits %>' /><% end %>
  </dataset>

  <dataset seriesName='Visitors' anchorBgColor='0000FF' anchorBorderColor='0000FF' color='FF9900'>
    <% @page_views.each do |page_view| %><set value='<%= page_view.visitors %>' /><% end %>
  </dataset>
</chart>
