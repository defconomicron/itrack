<table>
  <tr>
    <th><%= sort_control("Region", "region asc") %></th>
    <th><%= sort_control("Hits", "hits desc") %></th>
    <th><%= sort_control("Visits", "visits desc") %></th>
    <th><%= sort_control("Visitors", "visitors desc") %></th>
  </tr>
  <% @hits.each do |hit| %>
    <tr>
      <td><%= link_to hit.region, params.merge(:action => :set_region, :region => hit.region, :city => nil) %></td>
      <td><%= hit.hits %></td>
      <td><%= hit.visits %></td>
      <td><%= hit.visitors %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @hits %>
