<table>
  <tr>
    <th>Language</th>
    <th>Hits</th>
    <th>Visits</th>
    <th>Visitors</th>
  </tr>
  <% @hits.each do |hit| %>
    <tr>
      <td><%= link_to hit.http_accept_language || "", params.merge(:action => :set_http_accept_language, :http_accept_language => hit.http_accept_language) %></td>
      <td><%= hit.hits %></td>
      <td><%= hit.visits %></td>
      <td><%= hit.visitors %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @hits %>
